<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.approsoft.ludolounge.LoungeActivity"
    android:padding="16dp">
    <TextView
        android:id="@+id/tvVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a variant to play."
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btnSnakesNLadders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snakes and Ladders"
        android:textAllCaps="false"
        android:layout_below="@id/tvVariant"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
